<h2>Edit Question</h2>
<form>
  <div class="form-group">
    <label for="user_name">User Name</label>
    {{input value=user_name id="user_name" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="question_text">Your Question</label>
    {{textarea value=question_text id="question_text" class="form-control" rows='6'}}
  </div>
  <div class="form-group">
    <label for="notes">Notes</label>
    {{input value=notes id="notes" class="form-control"}}
  </div>
  <button class="btn" {{action 'editQuestion' question}}>Submit</button>
</form>
