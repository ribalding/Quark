<h3>Add Your Question</h3>

<form>
  <div class="form-group">
    <label for="user_name">User Name</label>
    {{input value=user_name id="user_name" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="question_text">Your Question</label>
    {{input value=question_text id="question_text" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="notes">Notes</label>
    {{input value=notes id="notes" class="form-control"}}
  </div>
  <button class="btn btn-primary" {{action 'saveQuestion'}}>Submit</button>
</form>
